{
  "name": "FlowAgent Development Environment",
  "image": "mcr.microsoft.com/devcontainers/universal:2",
  "features": {
    "ghcr.io/devcontainers/features/github-cli:1": {},
    "ghcr.io/devcontainers/features/kubectl-helm-minikube:1": {}
  },
  "customizations": {
    "vscode": {
      "settings": {
        "files.autoSave": "afterDelay",
        "files.autoSaveDelay": 1000,
        "editor.formatOnSave": true,
        "python.linting.enabled": true,
        "python.linting.pylintEnabled": true,
        "terminal.integrated.defaultProfile.linux": "bash"
      },
      "extensions": [
        "ms-python.python",
        "ms-python.vscode-pylance",
        "ms-python.autopep8",
        "ms-azuretools.vscode-docker",
        "ms-kubernetes-tools.vscode-kubernetes-tools",
        "redhat.vscode-yaml",
        "GitHub.copilot"
      ]
    }
  },
  "postCreateCommand": "pip install -r requirements.txt && pip install -r particle_core/requirements.txt && npm install",
  "remoteUser": "codespace",
  "portsAttributes": {
    "3000": {
      "label": "Next.js Dev Server",
      "onAutoForward": "notify"
    },
    "8000": {
      "label": "Python API Server",
      "onAutoForward": "notify"
    }
  },
  "forwardPorts": [3000, 8000],
  "workspaceMount": "source=${localWorkspaceFolder},target=/workspaces/${localWorkspaceFolderBasename},type=bind",
  "workspaceFolder": "/workspaces/${localWorkspaceFolderBasename}",
  "mounts": [
    "source=flow-tasks-node-modules,target=${containerWorkspaceFolder}/node_modules,type=volume"
  ]
  "image": "mcr.microsoft.com/devcontainers/universal:2",
  "features": {}
}
